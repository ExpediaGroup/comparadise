{
  "name": "comparadise-app",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "build:docker": "docker build . --tag comparadise && docker-compose up",
    "cypress:e2e": "cypress run --e2e --browser chrome",
    "cypress:open": "cypress open --component --browser chrome",
    "dev": "npm run start:frontend & npm-watch",
    "format": "prettier --write .",
    "lint": "eslint . --max-warnings=0",
    "start:backend": "ts-node app/backend/server.ts",
    "start:frontend": "vite",
    "test": "jest && cypress run --component",
    "test:integration": "start-server-and-test build:docker http://localhost:8080 cypress:e2e"
  },
  "watch": {
    "start:backend": {
      "patterns": [
        "backend"
      ],
      "extensions": "ts"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
