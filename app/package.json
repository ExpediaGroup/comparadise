{
  "name": "app",
  "private": true,
  "scripts": {
    "build:docker": "docker build . --tag comparadise && docker-compose up",
    "cypress:e2e": "cypress run --e2e --browser chrome --config frontend/cypress.config.ts",
    "cypress:open": "cypress open --component --browser chrome",
    "dev": "nx start:frontend & npm-watch",
    "start:backend": "nx start backend",
    "start:frontend": "nx start frontend",
    "test": "start-server-and-test build:docker http://localhost:8080 cypress:e2e"
  },
  "watch": {
    "start:backend": {
      "patterns": [
        "backend"
      ],
      "extensions": "ts"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
