{
  "name": "comparadise",
  "main": "action/main.ts",
  "dependencies": {
    "@aws-sdk/client-s3": "3.178.0",
    "@headlessui/react": "1.7.14",
    "@octokit/rest": "19.0.11",
    "@trpc/client": "10.18.0",
    "@trpc/react-query": "10.18.0",
    "@trpc/server": "10.18.0",
    "cors": "2.8.5",
    "express-rate-limit": "6.7.0",
    "lodash.groupby": "4.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-node": "10.9.1",
    "use-query-params": "2.2.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@swc/jest": "0.2.26",
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1",
    "@testing-library/cypress": "9.0.0",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.1",
    "@types/glob": "8.1.0",
    "@types/lodash.groupby": "4.6.7",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.8",
    "@types/testing-library__cypress": "5.0.9",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@vercel/ncc": "0.36.1",
    "@vitejs/plugin-react-swc": "3.3.2",
    "cypress": "12.13.0",
    "eslint": "8.41.0",
    "eslint-plugin-react": "7.32.2",
    "jest": "29.5.0",
    "npm-watch": "0.11.0",
    "prettier": "2.8.7",
    "prettier-plugin-tailwindcss": "0.3.0",
    "start-server-and-test": "2.0.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4",
    "vite": "4.3.9"
  },
  "scripts": {
    "build": "tsc && vite build",
    "build:docker": "docker build . --tag comparadise && docker-compose up",
    "cypress:e2e": "cypress run --e2e",
    "cypress:open": "cypress open --component --browser chrome",
    "dev": "npm run start:frontend & npm-watch",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint . --max-warnings=0",
    "package": "ncc build --out action/dist/ --source-map --license licenses.txt",
    "start:backend": "ts-node backend/server.ts",
    "start:frontend": "vite",
    "test:backend": "jest --silent",
    "test:frontend": "cypress run --component",
    "test:integration": "start-server-and-test build:docker http://localhost:8080 cypress:e2e"
  },
  "watch": {
    "start:backend": {
      "patterns": [
        "backend"
      ],
      "extensions": "ts"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "testRegex": ".test.ts$",
    "clearMocks": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
